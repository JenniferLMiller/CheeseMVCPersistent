@model List<CheeseMVC.Models.Menu>

<h1>Cheese Menus</h1>

<ul>
    @foreach (var Menu in Model)
    {
        <li>@Menu.Name <a asp-controller="Menu" asp-action="ViewMenu" asp-route-id="@Menu.ID">View Menu</a></li>
    }
</ul>

@if (Model.Count == 0)
{
    <p>No menus yet!</p>
}

<p><a asp-controller="Menu" asp-action="Add">Add Menu</a></p>

